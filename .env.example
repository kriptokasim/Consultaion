# Backend
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/consultaion
CORS_ORIGINS=http://localhost:3000
USE_MOCK=1
REQUIRE_REAL_LLM=0
FAST_DEBATE=0
DISABLE_AUTORUN=0
LITELLM_MODEL=gpt-4o-mini
LITELLM_API_BASE=https://api.openai.com/v1
OPENAI_API_KEY=sk-...
DB_ECHO=0
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
ENABLE_METRICS=1
RL_MAX_CALLS=5
RL_WINDOW=60
AUTH_RL_MAX_CALLS=10
AUTH_RL_WINDOW=300
RATE_LIMIT_BACKEND=memory
REDIS_URL=redis://localhost:6379/0
DEFAULT_MAX_RUNS_PER_HOUR=30
DEFAULT_MAX_TOKENS_PER_DAY=150000
APP_VERSION=0.2.0
EXPORT_DIR=exports
SENTRY_DSN=
SENTRY_ENV=local
SENTRY_SAMPLE_RATE=0.1
POSTGRES_USER=consultaion
POSTGRES_PASSWORD=change_me_dev

# Auth
# Update JWT_SECRET to a unique value before running in any environment.
JWT_SECRET=change_me_in_prod
JWT_TTL_SECONDS=86400
COOKIE_SAMESITE=lax
COOKIE_SECURE=false
# Optional CSRF protection for cookie auth (double-submit)
ENABLE_CSRF=1
# Dev-only DB credentials; override with strong values in production deployments.
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/consultaion
# Add common security headers (disable with 0/false)
ENABLE_SEC_HEADERS=1
# When ENABLE_CSRF=1, the frontend must send X-CSRF-Token from the csrf_token cookie for unsafe requests.

# Multi-LLM providers (at least one required in production)
OPENROUTER_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
# POE_API_KEY=  # future/disabled by default

# Google OAuth â€“ local development
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8000/auth/google/callback
# For remote deployments set GOOGLE_REDIRECT_URL to your public domain, e.g.:
# https://YOUR-PUBLIC-DOMAIN/auth/google/callback
# and register the same URI in Google Cloud Console.

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
WEB_APP_ORIGIN=http://localhost:3000
NEXT_PUBLIC_VOTE_THRESHOLD=7
NEXT_PUBLIC_AUTORUN_HINT=on
NEXT_PUBLIC_SENTRY_DSN=
PLAYWRIGHT_BASE_URL=http://127.0.0.1:3000

# Billing
BILLING_PROVIDER=stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_PRO_ID=
BILLING_CHECKOUT_SUCCESS_URL=http://localhost:3000/settings/billing?status=success
BILLING_CHECKOUT_CANCEL_URL=http://localhost:3000/settings/billing?status=cancel
